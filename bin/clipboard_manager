#!/usr/bin/env ruby
module ClipboardManager
  VERSION = '2.0.0'
  if _ = ARGV.shift
    if ['-v','--version'].include?(_)
      puts VERSION
      exit 0
    end
    puts <<-HELP
Usage:
  clipboard_manager [:options+]
Options:
  -v --version
  -h --help
    HELP
    exit 0
  end
end
require 'clipboard_manager'
Gtk3App.main ClipboardManager
